#!/bin/bash

# Path to changelog file
CHANGE_FILE=~/android/changelog-omni.html
# Path to root of CM project directory
CM_PROJECT_DIR=~/android/omni
## End Edit

PROJECT_LIST=$CM_PROJECT_DIR/.repo/project.list

NOW=$(date -u)

if [ -e "$PROJECT_LIST" ]; then
  REPOS=$(cat "$PROJECT_LIST" | sort)
else
  echo "Project list not found. Run repo_sync command to generate project list. Exiting!"
  exit
fi

rm "$CHANGE_FILE"

echo "<!DOCTYPE html><html><body><pre><b><u>Since $NOW</u></b><br>" > "$CHANGE_FILE"

for REPOPATH in $REPOS ; do
    if [ ! "$REPOPATH" == "" ]; then
      if [ -d "$CM_PROJECT_DIR"/"$REPOPATH" ]; then
        cd "$CM_PROJECT_DIR"/"$REPOPATH"
        GITOUT=$(git log HEAD --pretty="%h (%cr) %s (%an)" --since="5 days ago")
        if [ ! "$GITOUT" == "" ]; then
          echo "<b>$REPOPATH</b>" >> "$CHANGE_FILE"
          echo "$GITOUT<br>" >> "$CHANGE_FILE"
        fi
      fi
    fi
done

echo "</pre></body></html>" >> "$CHANGE_FILE"

echo ""
echo "Most recent changes:"
echo ""
cat "$CHANGE_FILE" | grep -E 'hours ago|minutes ago|seconds ago' | sed 's/<br>//g'
echo ""
